<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ws_setView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/workout_setCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/workout_set"
        android:layout_alignBottom="@id/workout_set"
        android:layout_marginRight="-32dp"
        android:layout_marginBottom="-4dp" />

    <TextView
        android:id="@+id/workout_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/workout_setTitle"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="146dp"
        android:layout_marginBottom="-30dp"
        android:text="100"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/workout_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/workout_setTitle"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="19dp"
        android:layout_marginBottom="-30dp"
        android:text="1"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/workout_reps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/workout_setTitle"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="295dp"
        android:layout_marginBottom="-30dp"
        android:text="1"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />
</RelativeLayout>
